package com.varxyz.jv250.jdbc;

import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class JDBCExample7 {
	public static void main(String[] args) {
		String driver = "com.mysql.cj.jdbc.Driver";
		String url = "jdbc:mysql://localhost:3306/jv250?serverTimezone=Asia/Seoul";
		String id ="jv250";
		String passwd ="jv250";
		
		Class.forName(driver);
		Connection con = DriverManager.getConnection(url, id, passwd);
		
		String sql = "update account set accountnum=?, balance=?, interestRate=?, overdraft=?, accountType=?, customerId=?, regDate=?";
		PreparedStatement pstmt = con.PreparedStatement(sql);
		pstmt.setString(1, "112-233-445");
		pstmt.setDouble(2, 0.1);
		pstmt.setString(3, "112-233-445");
		pstmt.setString(4, "112-233-445");
		pstmt.setString(5, "112-233-445");
		pstmt.setString(6, "112-233-445");
		pstmt.setString(7, "112-233-445");
		
	}
}
